{% extends 'base.html.twig' %}

{% block title %}
    Liste Salon
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Liste Salon</h1>
		<a href="{{ path('create_channel') }}" class="btn btn-outline-secondary">Ajouter Salon</a>
		<div class="mt-3">
			<table class="table table-striped table-hover">
				<thead>
					<tr class="text-center">
						<th scope="col">Nom</th>
						<th scope="col">Slug</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for channel in channels %}
						<tr class="text-center">
							<th scope="row">
								{{ channel.name }}
							</th>
							<td>
								{{ channel.slug }}
							</td>
                            <td>
                                <a href="{{ path('delete_channel', {slug: channel.slug}) }}" onclick="return confirm('Voulez-vous vraiment supprimer ce salon ?')" style="color: red;"><i class="fas fa-trash"></i></a>
                            </td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}